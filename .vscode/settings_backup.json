{
  // Editor settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.stickyScroll.enabled": false,
  "editor.tabSize": 4,
  // Explorer settings
  "explorer.autoRevealExclude": {
    "**/bower_components": false,
    "**/node_modules": false
