  // Python integration with Ruff (updated for native server: disable ms-python overlaps, enable Ruff fixes)
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.semanticHighlighting.enabled": true,

    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit", // optional but recommended: auto-apply all safe fixes (e.g. whitespace, unused vars, etc.)
      "source.organizeImports.ruff": "explicit" // ← this is the key line: enables Ruff's import sorting + unused import removal on save
    }
  },

  // Ruff settings
  "ruff.trace.server": "verbose",
  "ruff.lint.enable": true,
  // "ruff.lint.select": ["ALL"],
  // "ruff.lint.ignore": ["E501", "E402"],
  "ruff.lint.select": ["E", "F", "I", "UP", "B"],
  "ruff.lint.ignore": [
    "E501", // line-too-long (handled by formatter)
    "E402", // module-level import not at top (intentional side effects / env setup)
    "I001" // import order warnings (use isort or ordered by formatter)
  ],
  "ruff.lineLength": 88,
  "ruff.exclude": [
    ".git",
    ".venv",
    "__pycache__",
    "*.pyc",
    ".pyenv",
    "**/lib/python*/"
  ],
  // Uncomment to use ruff.toml file
